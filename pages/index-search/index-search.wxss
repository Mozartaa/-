  overflow: hidden;
}

.teaformation .fourhundreds {
  font-size: 30rpx;
  font-weight: 1000;
  font-family: Impact, Charcoal, sans-serif;
  margin-left: 50%;
  margin-top: 5rpx;
  background: linear-gradient(to right, rgb(233, 126, 65), rgb(240, 222, 122));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  padding-right: 10px;
  padding-top: 10rpx;
  text-shadow: 5px 5px rgb(68, 41, 18));
}


.teaformation .dep {
  display: -webkit-box;
  font-size: 30rpx;
  margin-left: 10rpx;
  color: white;
  padding-left: 2px;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:4;
}

.teaformation .homepage {
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-top: 20rpx;
