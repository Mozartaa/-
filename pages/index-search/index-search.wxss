.teaformation {
  position: relative;
  font-size: 30rpx;
  box-shadow: 10px 10px 10px #e4e4e4;
  background: linear-gradient(left, rgb(0, 6, 129), rgb(91, 212, 199));
  background: -webkit-linear-gradient(left, rgb(0, 6, 129), rgb(91, 212, 199));
  border-bottom: 1px solid #f5f8f9;
  margin: 35rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 15rpx;
  /* align-content: center; */
}

.teaformation .name {
  position: absoluete;
  font-size: 30rpx;
  margin-left: 10rpx;
