.container {
  width: 100%;
  height: 100%;
}
.header {
  background: -webkit-linear-gradient(left,rgb(0,6,129), rgb(91,212,199));
  background: linear-gradient(left,rgb(0,6,129), rgb(91,212,199));
  background-size: 100% auto;
  text-align: center;
  height: 100%;
}
.header__text-title
 {
  display: block;
  color: #fff;
  font-size: 50rpx;
  font-weight: 700;
  padding-top: 20rpx;
}
.search {
  margin: 50rpx 30rpx;
  background-color: #fff;
  width: 90%;
  border-radius: 60rpx;
  display: flex;
  height: 60rpx;
}
.search input.search-text {
  border: 0;
  flex: 8;
  font-size: 30rpx;
  text-align: left;
  padding-left:28rpx;
  margin:auto;
}
.search .search-btn {
  flex: 2;
  color: #5bd4c7;
  font-size: 30rpx;
  margin:auto;
}
.content {
  margin: 30rpx;
}
.content .icon image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.content .icon .text {
  font-size: 30rpx;
  font-weight: 700;
}
.content .item-list {
  margin-top: 36rpx;
  border-bottom: 1px solid #f5f8f9;
  padding-bottom: 36rpx;
  margin-bottom: 36rpx;
}
.content .item-list .item {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  color: #7e8793;
  line-height: 26rpx;
  background-color: #f5f8f9;
  border-radius: 2000rpx;
  margin: 0 16rpx 16rpx 0;
  display: inline-block;
}
.content .post-btn {
  display: flex;
  justify-content: center;
  padding: 16rpx 32rpx;
  color: #5bd4c7;
  font-size: 36rpx;
  line-height: 56rpx;
  background-color: #f5f8f9;
  border-radius: 200rpx;
  margin: 0 16rpx 16rpx 0;
}