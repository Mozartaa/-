.changeinfo-title {
  width: 100%;
  height: 90rpx;
  padding-left: 50rpx;
  line-height: 90rpx;
  color:white;
  background: -webkit-linear-gradient(left,rgb(0,6,129), rgb(91,212,199));
  background: linear-gradient(left,rgb(0,6,129), rgb(91,212,199));
}

.page-body-info {
  width: 130rpx;
  height: 130rpx;
}

.changeinfo-body {
  margin: 0 55rpx;
}

.item0 {
  display: flex;
  width: 100%;
  margin-top: 2rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2px solid rgb(236, 234, 234);
}

.radio-group {
  margin-right: 30rpx;
  background-color: white;
}

.item {
  display: flex;
  width: 100%;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2px solid rgb(236, 234, 234);
}

.item4 {
  margin-top: 10%;
}

.item4 button {
  background-image:-webkit-linear-gradient(left,rgb(0,6,129), rgb(91,212,199));
  background-image: linear-gradient(left,rgb(0,6,129), rgb(91,212,199));
  color:white;
}

.item:nth-child(1) {
  border-top: 2px solid rgb(236, 234, 234);
}

