.header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width:220rpx;
    height: 220rpx;
    border-radius: 50%;
}
 
.content {
    margin:10rpx 12%;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 20rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}