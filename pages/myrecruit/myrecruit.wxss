#tabs {
  font-size: 28rpx;
}

.tabs-box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.tabs-item.selected {
  color: #5bd4c7;
  border-bottom: 2rpx solid #5bd4c7;
}

.tabs-item {
  width: 33.3%;
  color: #666;
  border-bottom: 1rpx solid #e9e9e9;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.mag {
  margin-left: 440rpx;
  color: rgba(0, 77, 220, 0.888);
}

.dropdown-content {
  display: none;
  position: absolute;
  margin-left: 380rpx;
  background-color: #f9f9f9;
  width: 120px;
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
  padding: 12px 16px;
}

.dropdown:hover .dropdown-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dropdown-content view {
  margin: 10rpx 0;
}

.line {
  margin-left: 18%;
