/* pages/detail.wxss */
.detail{
  width:100%;
  height:100%
}
.detail image{
  margin: 0;
  opacity: 0.2;
}

.content {
  margin: 30rpx;
}

.content .icon image {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.content .icon .text {
  font-size: 30rpx;
  font-weight: 700;
}
.content .item-list {
  margin-top: 10rpx;
  border-bottom: 1px solid #f5f8f9;
  padding-bottom: 36rpx;
  margin-bottom: 10rpx;
}

.list-text{
  font-size: 30rpx;
  color: #7e8793;
  line-height: 40rpx;
  background-color: #f5f8f9;
  margin: 10rpx 0 0 10rpx;
  padding: 12rpx;
  display: inline-block;
}

.content .back-btn {
  display: flex;
  justify-content: center;
  padding: 16rpx 32rpx;
  color: #5bd4c7;
  font-size: 36rpx;
  line-height: 56rpx;
  background-color: #f5f8f9;
  border-radius: 200rpx;
  margin: 0 16rpx 16rpx 0;
}