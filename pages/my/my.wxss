button::after {
  border: none;
}


.page-body-info {
  text-align: center;
}

.userinfo {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
  margin-top:85px;
}

.my-body {
  margin: 120rpx 50rpx;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 120rpx;
  border-bottom: 2px solid rgb(91,212,199);
}
.flex-view-item{
  margin-left: 90rpx;
  color:#7e8793;
}
.item button {
  margin:0;
  width: 60px;
  background-color: transparent;
  padding:auto;
  color:rgb(0,6,129);
  font-weight:bold;
}
.item:nth-child(1) {
  border-top: 2px solid rgb(91,212,199);
}

